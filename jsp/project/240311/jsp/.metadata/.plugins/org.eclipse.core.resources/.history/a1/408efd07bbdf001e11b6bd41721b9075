package com.reply.action;

import java.io.IOException;
import java.io.PrintWriter;

import javax.servlet.ServletException;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import com.reply.model.BbsDAO;
import com.reply.model.BbsDTO;

public class BbsReplyOkAction implements Action{

	@Override
	public ActionForward execute(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		
		int no = Integer.parseInt(request.getParameter("no").trim());
		String writer = request.getParameter("writer").trim();
		String pwd = request.getParameter("pwd").trim();
		String reply = request.getParameter("reply").trim();
		
		BbsDTO dto = new BbsDTO();
		dto.setBoard_no(no);
		dto.setBoard_writer(writer);
		dto.setBoard_pwd(pwd);
		dto.setBoard_cont(reply);
				
		BbsDAO dao = BbsDAO.getInstance();
		
		int check = dao.bbsReply(dto);
		
		ActionForward forward = new ActionForward();
		
		PrintWriter w = response.getWriter();
		
		w.println("<script>");
		if(check > 0) {
			w.println("alert('댓글 등록 성공')");
			w.println("location.href='list.go'");
		}else {
			w.println("alert('댓글 등록 실패')");
			w.println("history.back()");
		}
		w.println("</script>");
		
		return forward;
	}
	
}
